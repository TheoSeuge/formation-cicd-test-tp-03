meta {
  name: Get Orders
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/api/orders
  body: none
  auth: none
}

assert {
  res.status: eq 200
}

tests {
  test("should return status 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("should return 2 orders", function() {
    const orders = res.getBody();
    expect(orders).to.have.lengthOf(2);
  });

  test("first order should be Laptop", function() {
    const orders = res.getBody();
    expect(orders[0].id).to.equal(1);
    expect(orders[0].product).to.equal("Laptop");
    expect(orders[0].price).to.equal(1200.0);
  });

  test("second order should be Mouse", function() {
    const orders = res.getBody();
    expect(orders[1].id).to.equal(2);
    expect(orders[1].product).to.equal("Mouse");
    expect(orders[1].price).to.equal(25.0);
  });
}
